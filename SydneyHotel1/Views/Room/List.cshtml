@model IEnumerable<SydneyHotel.Models.Room>

<div class="list-box">
    <div class="row">
        <div class="col-md-8">
            <h1>Room List</h1>

        </div>

        <div class="col-md-4 search-field">
            <form class="navbar-form" role="search" method="get" action="/Room/List">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search" name="text">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="room-box">
            <div class="room-image">
                <img class="room-img" src="~/Images/@item.Image" />
            </div>
            <div class="room-info">
                <h2 class="title">@item.ObjectName</h2>
                <p class="item">Room type: @item.RoomType.ObjectName</p>
                <p class="item">Capacity: @item.Space</p>


            </div>

            <div class="room-last">
                <p>$@item.RoomType.Price</p>
                @{
                    if (Session["ID"] != null)
                    {
                        <a class="btn btn-default" href="/Booking/Room/@item.Id">Book</a>

                    }
                    else
                    {
                        <a class="btn btn-default" href="/Account/Login">Book</a>
                    }
                }
            </div>
        </div>
    }

</div>
